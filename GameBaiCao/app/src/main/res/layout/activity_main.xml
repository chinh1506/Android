<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="20"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="máy"
            android:textSize="30sp"
            android:gravity=""/>
        <TextView
            android:id="@+id/tvSoTranMay"
            android:text="Win: 0"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:layout_height="match_parent"/>



    </LinearLayout>
    <LinearLayout
        android:layout_weight="18"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="12"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvKetQuaMay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"/>
            <LinearLayout
                android:weightSum="15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imvMay1"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="150dp" />
                <ImageView
                    android:id="@+id/imvMay2"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="150dp" />
                <ImageView
                    android:id="@+id/imvMay3"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="150dp" />

            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/imbPlay"
            android:layout_weight="4"
            android:src="@drawable/pngegg"
            android:layout_width="200dp"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imvLa1"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="150dp" />
                <ImageView
                    android:id="@+id/imvLa2"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="150dp" />
                <ImageView
                    android:id="@+id/imvLa3"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="150dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/tvKetQuaBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bạn"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvSoTranBan"
            android:text="Win: 0"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>