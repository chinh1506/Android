<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Chương trình quản lý bản hàng"
        android:background="@color/purple_500"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin hóa đơn:"
        android:background="#E3D66B"/>
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Tên khách hàng: "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edtTen"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Nhập vào tên "/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Số lượng sách: "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edtSoLuong"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Nhập vào số lượng sách "/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/chkVip"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Là khách hàng VIP"/>


    </LinearLayout>

    <LinearLayout
        android:weightSum="9"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
       <Button
           android:id="@+id/btnTinh"
           android:layout_weight="3"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:text="Tính TT"/>

        <Button
            android:id="@+id/btnTiep"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Tiếp"/>
        <Button
            android:id="@+id/btnThongKe"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Thống kê"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin thống kê"
        android:background="#FFEB3B"/>
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView

            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="tổng số KH: "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edtTongKH"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="tổng số KH"/>
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="tổng số KH VIP: "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edtKhVip"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="tổng số KH VIP"/>
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="tổng doanh thu: "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edtTongDoanhThu"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="tổng doanh thu"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:textColor="@color/white"/>
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/btnThoat"
            android:layout_weight="2"
            android:src="@drawable/img"
            android:layout_width="0dp"
            android:layout_height="50dp"/>
    </LinearLayout>

</LinearLayout>